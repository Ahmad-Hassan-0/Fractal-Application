<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    >

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="-8dp"
        android:layout_marginStart="-16dp"
        android:scaleType="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/backarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#4F4F4F" />

    <TextView
        android:id="@+id/tv_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/genos_family"
        android:textFontWeight="500"
        android:letterSpacing="0.16"
        android:text="Registered Info"
        android:textColor="#4F4F4F"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_screen_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="38dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/genos_bold"
                android:letterSpacing="0.3"
                android:text="User"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/genos_regular"
                android:letterSpacing="0.16"
                android:text="Username: whiteshadow69"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/genos_regular"
                android:letterSpacing="0.16"
                android:text="Email: bted4389@gmail.com"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_joined_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/genos_regular"
                android:letterSpacing="0.16"
                android:text="Joined On: 23rd Feb, 2004"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/genos_bold"
                android:letterSpacing="0.3"
                android:text="Platform"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/genos_regular"
                android:letterSpacing="0.16"
                android:text="Android"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/genos_bold"
                android:letterSpacing="0.3"
                android:text="Hardware Info"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_hardware_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/genos_regular"
                android:letterSpacing="0.16"
                android:text="Hardware ID: 203-2930"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_serial_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/genos_regular"
                android:letterSpacing="0.16"
                android:text="Serial Number: 203-2930"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_processor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/genos_regular"
                android:letterSpacing="0.16"
                android:text="Processor: Snapdragon 4.2"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/genos_regular"
                android:letterSpacing="0.16"
                android:text="Storage: 64GB"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_ram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/genos_regular"
                android:letterSpacing="0.16"
                android:text="Total RAM: 4GB"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/genos_bold"
                android:letterSpacing="0.3"
                android:text="Software Info"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_android_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/genos_regular"
                android:letterSpacing="0.16"
                android:text="Android Version: 7.1 Oreo"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/genos_bold"
                android:letterSpacing="0.3"
                android:text="Network Info"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_mac_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/genos_regular"
                android:letterSpacing="0.16"
                android:text="MAC Address: 04-2D-91-98-32-0A"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>