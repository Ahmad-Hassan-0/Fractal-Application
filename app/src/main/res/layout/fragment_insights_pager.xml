<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_indicators"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/indicator_device"
            android:layout_width="21dp"
            android:layout_height="34dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_diamond_indicator_selected"
            app:tint="#000000" />

        <ImageView
            android:id="@+id/indicator_home"
            android:layout_width="21dp"
            android:layout_height="34dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_diamond_indicator_deselected"
            app:tint="#000000" />

        <ImageView
            android:id="@+id/indicator_model"
            android:layout_width="21dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_diamond_indicator_deselected"
            app:tint="#000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>