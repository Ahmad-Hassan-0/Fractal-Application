<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="32dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/genos_family"
        android:letterSpacing="0.16"
        android:text="Device Insights"
        android:textColor="#181818"
        android:textFontWeight="400"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/battery_bar_container"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_border_black"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/genos_regular"
            android:letterSpacing="0.16"
            android:text="Battery"
            android:textColor="#181818"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_battery_percent_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/genos_regular"
            android:letterSpacing="0.16"
            android:text="79%"
            android:textColor="#181818"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/fl_battery_mask"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#181818"
            android:clipChildren="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.79">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_battery_inner"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/genos_regular"
                    android:letterSpacing="0.16"
                    android:text="Battery"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_battery_percent_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/genos_regular"
                    android:letterSpacing="0.16"
                    android:text="79%"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_status_tree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/battery_bar_container"
        app:layout_constraintStart_toStartOf="@+id/battery_bar_container"
        app:layout_constraintTop_toBottomOf="@+id/battery_bar_container">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp"> <ImageView
            android:id="@+id/ic_charging"
            android:layout_width="13dp"
            android:layout_height="28dp"
            android:src="@drawable/leaf_unchecked" />

            <TextView
                android:id="@+id/tv_charging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/genos_regular"
                android:letterSpacing="0.16"
                android:text="On Charging"
                android:textColor="#4F4F4F"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ic_online"
                    android:layout_width="13dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_diamond_indicator_selected" />

                <TextView
                    android:id="@+id/tv_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:fontFamily="@font/genos_regular"
                    android:letterSpacing="0.16"
                    android:text="Online"
                    android:textColor="#4F4F4F"
                    android:textSize="17dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ic_branch"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_branch_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="33dp"> <ImageView
                    android:id="@+id/ic_wifi"
                    android:layout_width="13dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_diamond_indicator_selected" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:fontFamily="@font/genos_regular"
                        android:letterSpacing="0.16"
                        android:text="Wi-Fi"
                        android:textColor="#4F4F4F"
                        android:textSize="17dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ic_cellular"
                        android:layout_width="13dp"
                        android:layout_height="28dp"
                        android:src="@drawable/leaf_unchecked" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:fontFamily="@font/genos_regular"
                        android:letterSpacing="0.16"
                        android:text="Cellular"
                        android:textColor="#4F4F4F"
                        android:textSize="17dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_stats_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_status_tree"> <TextView
        android:id="@+id/tv_device_standby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/genos_regular"
        android:letterSpacing="0.16"
        android:text="Device Standby time: -- hrs"
        android:textColor="#4F4F4F"
        android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_network_standby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/genos_regular"
            android:letterSpacing="0.16"
            android:text="Network Standby Time: -- hrs"
            android:textColor="#4F4F4F"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_power_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/genos_regular"
            android:letterSpacing="0.16"
            android:text="Power Consumption: -- mW"
            android:textColor="#4F4F4F"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_stats_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_stats_1">

        <TextView
            android:id="@+id/tv_temp_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/genos_regular"
            android:letterSpacing="0.16"
            android:text="Temp Storage: -- GBs"
            android:textColor="#4F4F4F"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_bg_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/genos_regular"
            android:letterSpacing="0.16"
            android:text="Background Tasks Running: --"
            android:textColor="#4F4F4F"
            android:textSize="17dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_optimize"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="#181818"
        android:fontFamily="@font/genos_regular"
        android:gravity="center"
        android:letterSpacing="0.16"
        android:text="Optimize"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_stats_2" />

</androidx.constraintlayout.widget.ConstraintLayout>